
@{
    ViewBag.Title = "Login";
}
<style>

      .loginform{
          max-width: 290px;
        min-width: 150px;
        margin: 70px auto;
      }
  
      .margin{
          margin-bottom:3%

      }
      .getcover{

          
    background-size: cover;
    background-image: url('../../logos/home.jfif');
    height:100%
      }
      footer>p{
          color:aliceblue
      }
      .myform{    height: 50%;
    width: 29%;
    padding: 14px;
    background: rgba(0,0,0,.8);
    margin: 6% auto;
    padding-bottom:80px;

      }
      a:hover{
          color:gold !important

      }
</style>

    <div class="col-xl-12 backgroundimg">

        <div class="myform">
            @using (Html.BeginForm())
            {
              <h3 style="color:aliceblue;text-align:center ; font-family:'Comic Sans MS'"> Welcome !</h3>
              <br />
             
                <input class="form-control  margin" type="text" name="Username" placeholder="Username" />
                <input class="form-control margin" type="password" name="Password" placeholder="Password" />
                <input class="btn btn-danger btn-block " type="submit" value="Login" />
                if (ViewBag.state == false)
                {

                    <div class="text-danger">Invalid Username or Password</div>
                }
                <br />
                <br />
                <a href="/Customer/Register" class="text-center " style="display:block;color:aliceblue;text-decoration:none">Create a New Account </a>
            }

        </div>
    </div>